<%= javascript_include_tag 'homeIndex', 'data-turbolinks-track' => true %>
<%- title "Home" %>
<div class="center jumbotron" id="home-img-container">
	<div id='main'>
		<% if user_signed_in? %>
	  		<h1>Welcome <%= current_user.email %>!</h1>
	  		<h2><%= link_to content_tag(:button, "My Progress", :class=> ["btn", "btn-default", "btn-lg","ghost-button"]), timeline_index_path %>  <%= link_to content_tag(:button, "Add Progress", :class=> ["btn", "btn-default", "btn-lg","ghost-button"]), timeline_edit_path %></h2>
	</div>
</div>
	 	
<div class="datatable-wrapper">
	<table id="userNames" class="use-datatable">
		<thead>
			<tr>
				<th>User Name</th>
			</tr>
		</thead>
		<tbody>
			<% User.all.each do |user| %>
				<tr>
					<td><%= user.username %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
		<% end %>

<div id="verse">
	<h2><%= @passages.collection.first.text.html_safe %></h2>
</div>

