<h1>Users</h1>

<table>
	<thead>
		<tr>
			<th>Username</th>
			<th>Email</th>
			<th colspan="1"></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.username %></td>
				<td><%= user.email %></td>
				<td><%= link_to "Add Friend", api_friendships_path(:friend_id => user), :method => :post %>
			</tr>
		<% end %>
	</tbody>
</table>
