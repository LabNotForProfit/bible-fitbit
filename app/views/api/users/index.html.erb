<h1>Users</h1>

<table>
	<thead>
		<tr>
			<th>Username</th>
			<th>Email</th>
			<th colspan="1"></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= user.username %></td>
				<td><%= user.email %></td>
				<td>
					<!-- Check if this user is not the current_user and is not in our friends list -->
					<% if user != current_user && !(current_user.friends.include?(user)) %>
						<%= link_to "Add Friend", api_friendships_path(:friend_id => user), :method => :post %>
					<% end %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>
