<% content_for :head do %>
	<%= stylesheet_link_tag 'bookreview/fillInBlanks', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'bookreview/fillInBlanksIndex', 'data-turbolinks-track' => true %>
<% end %>


<div class="blanks-page-wrapper">
	<%= @test %>
	<h2>Pick a book!</h2>
	<div class="blanks-block">
		<select id="books" onchange="updateGo();">
			<option value=""></option>
			<% @books.each do |book| %>
				<option value="<%= book.name.gsub(' ', '') %>"><%= book.name %></option>
			<% end %>
		</select>
	</div>
	<div class="blanks-block">
		<%= link_to content_tag(:button, "Go", :class => ["btn", "btn-default", "btn-lg","ghost-button-twitter"]), '/api/fill_in_blanks', :id => 'goButton' %>
	</div>
</div>